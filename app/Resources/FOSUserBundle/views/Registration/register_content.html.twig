{% trans_default_domain 'FOSUserBundle' %}
<div class="row">
	<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        	{# Email #}
        	<div class="form-group">
                {{ form_row(form.email, {
                    'attr': {
                         'placeholder': '',
                         'class': 'form-control'
                     }
                })}}
            </div>
        	{# Username #}
        	<div class="form-group">
                {{ form_row(form.username, {
                    'attr': {
                         'placeholder': '',
                         'class': 'form-control'
                     }
                })}}
            </div>
        	{# Password #}
        	<div class="form-group">
                {{ form_row(form.plainPassword.first, {
                    'attr': {
                         'placeholder': '',
                         'class': 'form-control'
                     }
                })}}
            </div>
        	{# Confirm Password #}
        	<div class="form-group">
                {{ form_row(form.plainPassword.second, {
                    'attr': {
                         'placeholder': '',
                         'class': 'form-control'
                     }
                })}}
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans }}" style="width: 100%;" />
            </div>
        {{ form_end(form) }}
	</div>
</div>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block meta_description %}{% endblock %}">
        <meta name="author" content="{% block meta_author %}{% endblock %}">
    
        <title>{% block title_tag %}{{ appname }} Admin{% endblock %}</title>
    
        <!-- Bootstrap Core CSS -->
        <link href="{{ asset('bundles/singzcore/bootstrap-3.3.7/css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- MetisMenu CSS -->
        <link href="{{ asset('bundles/singzadmin/css/metisMenu.min.css') }}" rel="stylesheet">
        <!-- Custom CSS -->
        <link href="{{ asset('bundles/singzadmin/css/sb-admin-2.min.css') }}" rel="stylesheet">
        <!-- Custom Fonts -->
        <link href="{{ asset('bundles/singzadmin/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
        <style>
            .sidebar .arrow {
                content: "\f105";
            }
            .fa.arrow:before {
                content: "\f105";
            }
            .sidebar .fa.arrow:before {
                content: "\f105";
            }
        </style>
        {% block stylesheets %}{% endblock %}
    
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div id="wrapper">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                {% include('SingzAdminBundle::topbar.html.twig') %}
    			{% include('SingzAdminBundle::sidebar.html.twig') %}
            </nav>
    
            <!-- Page Content -->
            <div id="page-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">{% block title_page %}{% endblock %}</h1>
                        </div>
                        <!-- /.col-lg-12 -->
                        {# Error message #}
						<div class="col-md-12">
							{{ include('SingzCoreBundle::flash-messages.html.twig') }}
						</div>
                        <!-- /.col-lg-12 -->
                        <div class="col-lg-12">
                            {% block body %}{% endblock %}
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /#page-wrapper -->
    
        </div>
        <!-- /#wrapper -->
    
        <!-- jQuery -->
        <script src="{{ asset('bundles/singzadmin/js/jquery.min.js') }}"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('bundles/singzcore/bootstrap-3.3.7/js/bootstrap.min.js') }}"></script>
        <!-- Metis Menu Plugin JavaScript -->
        <script src="{{ asset('bundles/singzadmin/js/metisMenu.min.js') }}"></script>
        <!-- Custom Theme JavaScript -->
        <script src="{{ asset('bundles/singzadmin/js/sb-admin-2.min.js') }}"></script>
        <!-- Charts -->
        <script src="{{ asset('bundles/singzadmin/js/raphael.min.js') }}"></script>
        <script src="{{ asset('bundles/singzadmin/js/morris.min.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>

<!-- Header -->
<header id="header" class="hide">
	<div class="inner">
		<div class="content">
			<a href="{{ path('singz_index') }}">
				<img src="{{ asset('bundles/singzcore/img/logo-singz.png') }}" alt="{{ appname }}">
			</a>
		</div>
	</div>
	<ul class="cd-header-buttons">
		<li><a class="cd-search-trigger" href="#cd-search">Search<span></span></a></li>
		<li><a class="cd-nav-trigger" href="#cd-primary-nav">Menu<span></span></a></li>
	</ul>
</header>


<div class="cd-overlay"></div>
<nav class="cd-nav">
	<ul id="cd-primary-nav" class="cd-primary-nav is-fixed">
		{% if app.user %}
			<li>
				<a href="{{ path('fos_user_security_logout') }}">
					<button title="Se déconnecter" data-placement="bottom" data-toggle="tooltip" class="btn btn-danger">
						<i class="fa fa-sign-out" aria-hidden="true"></i> Se déconnecter
					</button>
				</a>
			</li>
    		<li>
    			<a href="{{ path('singz_user_bundle_homepage', {'username': app.user.username}) }}">
    				<img style="width:42px;height:42px" class="img-circle" src="{{ asset(app.user.image.realPath)}}" alt="{{ app.user.username }}"> {{ app.user.username }}
    			</a>
    		</li>
    		<li>
    			<a title="Ajouter une vidéo" data-placement="bottom" href="{{ path('singz_social_bundle_publication_new') }}">
    				<i class="fa fa-fw fa-plus"></i> Ajouter une vidéo
    			</a>
    		</li>
    		<li>
    			<a class="notification-link" title="Notifications" data-placement="bottom" href="{{ path('singz_social_bundle_notification_list') }}">
    				<i class="fa fa-fw fa-bell-o"></i>
    				{% if notificationsUnseen > 0 %}
    					<span class="badge badge-notify">{{ notificationsUnseen }}</span>
						Notifications
                    {% else %}
						Notifications
    				{% endif %}

    			</a>
    		</li>
    			{% if is_granted('ROLE_ADMIN') %}
    				<li>
        				<a title="Administration" data-placement="bottom" href="{{ path('singz_admin_dashboard') }}">
        					<i class="fa fa-fw fa-cogs" aria-hidden="true"></i> Administration
        				</a>
    				</li>
    			{% endif %}
		{% else %}
    		<li>
    			<a href="{{ path('fos_user_security_login') }}">
    				<button class="btn btn-default">Se connecter</button>
    			</a>
    		</li>
    		<li>
    			<a href="{{ path('fos_user_registration_register') }}">
    				<button class="btn btn-default">S'enregistrer</button>
    			</a>
    		</li>
		{% endif %}
		<li>
			<a href="{{ path('singz_feed') }}">
    			<i class="fa fa-fw fa-newspaper-o" aria-hidden="true"></i> Fil d'actualité
    		</a>
		</li>
		<li>
    		<a href="{{ path('singz_browse_all') }}">
    			<i class="fa fa-fw fa-globe" aria-hidden="true"></i> Browse
    		</a>
		</li>
	</ul>
</nav>

<div id="cd-search" class="cd-search">
	<form id="search-form" action="{{ path('singz_search') }}" method="GET">
		<input id="search-input" type="search" placeholder="Search..." autocomplete="off" name="s">
	</form>
</div>

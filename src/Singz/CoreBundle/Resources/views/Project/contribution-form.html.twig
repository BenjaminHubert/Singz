{{ form_start(form) }}
	{# amount #}
	<div>
		{{ form_label(form.amount, null, {
            'label_attr': {
                'class': 'control-label'
            }
        }) }}
		<div class="input-group {% if form_errors(form.amount) != "" %}has-error{% endif %}">
		    {{ form_errors(form.amount) }}
            {{ form_widget(form.amount, {
                'attr': {
                    'class': 'form-control',
                    'autocomplete': 'off',
                    'step': '0.01',
                    'min': '1'
                },
                'type': 'number'
            }) }}
            <i class="input-group-addon fa fa-eur" aria-hidden="true"></i>
            
        </div>
    </div>
	{# save #}
	<div>
		<div class="form-group">
            {{ form_widget(form.save, {
                'attr': {
                    'class': 'btn btn-default',
                }
            }) }}
        </div>
    </div>
{{ form_end(form) }}